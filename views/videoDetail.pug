extends layouts/main
block content
    .video_player
        video(src=`/${video.fileUrl}`)
    .video_info
        a(href=routes.editVideo(video.id)) Edit Video
        h5.video_title=video.title
        span.video_views=video.views
        p.video_description=video.description
    .video_comments
        if video.comments.length === 1
            span.video_comment-number 1 Comment
        else if video.comments.length === 0
            span.video_comment-number 댓글이 없습니다.
        else
            span.video_comment-number #{video.comments.length} Comments